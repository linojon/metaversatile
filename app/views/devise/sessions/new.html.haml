#sign_in.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'} ) do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email, class: 'sr-only'
    = f.email_field :email, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true
    = f.label :password, class: 'sr-only'
    = f.password_field :password, class: 'form-control', placeholder: 'Password', required: true, autocomplete: 'off'
    .checkbox
      %label
        = f.check_box :remember_me
        Remember me
      
    = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'


